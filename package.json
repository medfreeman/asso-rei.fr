{
  "private": true,
  "name": "REI",
  "description": "association sportive",
  "author": "Mehdi Lahlou <mehdi.lahlou@free.fr>",
  "homepage": "https://www.asso-rei.fr/",
  "repository": "https://github.com/medfreeman/asso-rei.fr.git",
  "scripts": {
    "#<git hooks>": "handled by husky",
    "precommit": "lint-staged",
    "#</git hooks>": "handled by husky",
    "lint:js": "eslint --ignore-path .gitignore --fix \"src/**/*.js\" \"src/**/*.vue\"",
    "lint:css": "stylelint \"src/**/*.css\" \"**/*.vue\"",
    "lint": "npm-run-all --parallel lint:*",
    "test": "yarn run lint",
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate"
  },
  "devDependencies": {
    "contentful": "^4.6.1",
    "eslint": "^4.5.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-vue": "beta",
    "git-exec-and-restage": "^1.0.1",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.4",
    "npm-run-all": "^4.0.2",
    "nuxt": "^1.0.0-rc6",
    "postcss-cssnext": "^3.0.2",
    "postcss-reporter": "^5.0.0",
    "prettier": "^1.5.3",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-processor-html": "^1.0.0",
    "stylelint-webpack-plugin": "^0.9.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "vue-flex": "^1.0.9",
    "vuetify": "^0.15.0-beta.3",
    "vuex-scroll": "^0.0.5"
  },
  "lint-staged": {
    "*.js": [
      "git-exec-and-restage prettier --write --parser=babylon --"
    ],
    "*.css": [
      "git-exec-and-restage prettier --write --"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "ecmaVersion": 8
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/recommended"
    ],
    "env": {
      "browser": true,
      "node": true
    }
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-html"
    ],
    "extends": [
      "stylelint-config-standard"
    ],
    "rules": {
      "no-empty-source": null,
      "declaration-empty-line-before": null
    }
  }
}
